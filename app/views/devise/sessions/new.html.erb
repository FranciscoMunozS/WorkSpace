<div id="login">
  <div class="card">
    <h2 class="card-header text-center">Iniciar Sesión</h2>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs text-center">
          <%= f.input :email, required: false, autofocus: true, label: "Correo Electronico", input_html: { autocomplete: "email" } %>
          <%= f.input :password, required: false, label: "Contraseña", input_html: { autocomplete: "current-password" } %>
        </div>
    </div>
    <div class="card-footer">
      <div class="form-actions">
        <%= f.button :submit, "Iniciar Sesión", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
