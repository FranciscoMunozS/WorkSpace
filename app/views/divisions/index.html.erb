<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <h3>Divisiones</h3>
  </div>
  <div class="col-md-6">
    <p class="text-right">
      <%= link_to 'Agregar Nueva División', new_division_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>
<hr>
<table class="table table-bordered" id="dttb3">
  <thead>
    <tr>
      <th class="text-center">Nombre División</th>
      <th class="text-center">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @divisions.each do |division| %>
      <tr>
        <td class="text-center"><%= division.name %></td>
        <td class="text-center">
          <%= link_to 'Ver División', edit_division_path(division), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Eliminar', division, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
