<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <h3>Unidades</h3>
  </div>
  <div class="col-md-6">
    <p class="text-right">
      <%= link_to 'Agregar Nueva Unidad', new_unit_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>
<hr>
<table class="table table-bordered" id="dttb2">
  <thead>
    <tr>
      <th class="text-center">Nombre Unidad</th>
      <th class="text-center">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td class="text-center"><%= unit.name %></td>
        <td class="text-center">
          <%= link_to 'Ver Unidad', edit_unit_path(unit), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Eliminar', unit, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger btn-sm' %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
